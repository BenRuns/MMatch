<div class="container-fluid">

  <div class="row">
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-1 main">
      <%= form_tag("search", method: "get") do %>

        <div class="row">
          <%= render 'tools' %>
        </div>

        <div class="row">
          <div class="col-sm-9 col-sm-offset-3 col-md-9 col-md-offset-3 main">
            <div class="col-xs-6 col-sm-3 col-md-3">
              <%= label_tag(:q, "State:") %>
              <%= text_field_tag(:state, nil, placeholder: 'Seattle') %>
            </div>
            <div class="col-xs-6 col-sm-3 col-md-3">
              <%= label_tag(:q, "City:") %>
              <%= text_field_tag(:city, nil, placeholder: 'WA') %>
            </div>
            <div class="col-xs-6 col-sm-3 col-md-3">
              <br />
              <%= submit_tag("Search", class: 'btn') %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>

  <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2 class="sub-header">Maker Spaces:</h2>
        <%= render 'table' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 footer">
      <p class="text-center">&copy; MakerMatch 2014</p>
    </div>
  </div>

</div>
